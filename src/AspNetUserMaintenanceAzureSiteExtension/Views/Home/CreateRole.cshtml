@{
    ViewBag.Title = "Create Role";
}
<h2>Create Role (@Html.ActionLink("back to list", "ListUsers"))</h2>
<br />
@if (ViewBag.Errors != null)
{
    <ul>
        @foreach (var error in ViewBag.Errors)
        {
            <li>@error</li>
        }
    </ul>
}
<br />
<form method="post">
    <input type="text" class="form-control" id="r" name="r" placeholder="Role (required)" value="@ViewBag.Role" required>
    <br />
    <button type="submit" class="btn btn-default">Create Role</button>
</form>