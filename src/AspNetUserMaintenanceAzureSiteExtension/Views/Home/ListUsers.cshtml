@{
    ViewBag.Title = "List Users";
}

<h2>List Users</h2>

<h3>Filter Users (@Html.ActionLink("clear filters/see all", "ListUsers"))</h3>
<form method="get">
    <input type="text" class="form-control" id="u" name="u" placeholder="UserName" value="@ViewBag.Sc.UserName" >
    <input type="text" class="form-control" id="e" name="e" placeholder="Email" value="@ViewBag.Sc.Email" >
    <input type="text" class="form-control" id="r" name="r" placeholder="Role" value="@ViewBag.Sc.Role">
    <br />
    <button type="submit" class="btn btn-default">Filter</button>
</form>

<h3>Top 100 Results (@Html.ActionLink("create user", "CreateUser") | @Html.ActionLink("create role", "CreateRole") | @Html.ActionLink("bulk create", "BulkCreate"))</h3>
<table style="width:80%">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th style="width:30%">UserName</th>
            <th style="width:30%">Email</th>
            <th style="width:30%">Role(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var vm in ViewBag.AspNetUsers)
        {
            <tr>
                <td>edit</td>
                <td>@vm.UserName</td>
                <td>@vm.Email</td>
                <td>@vm.Role</td>
            </tr>
        }
    </tbody>
</table>
